
$ ->  
   
  # get attributes from DOM and instantiate Backbone model 
  wizard_id = $('#wizard').data('wizard-id')
  wizard = new SpreeWizard.Models.Wizard({id: wizard_id});
    
  # make API call to get all model attributes
  wizard.fetch success: (model, response, options) ->
  
    # create and render Marionette ItemView
    wizard_show_view = new SpreeWizard.Views.Wizards.ShowView(model: model)
    wizard_show_view.render()
