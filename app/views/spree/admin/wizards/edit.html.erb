<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_wizards_list), 
      session[:return_to] || admin_wizards_url, 
      :icon => 'icon-arrow-left'
    %>
  </li>

  <li id="new_wizard_link">
    <%= button_link_to Spree.t(:new_wizard), 
      new_object_url, 
      { :icon => 'icon-plus', :id => 'admin_new_wizard' } 
    %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @wizard } %>

<%= form_for [:admin, @wizard], :method => :put, :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

