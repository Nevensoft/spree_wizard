<h1>Listing wizards</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wizards.each do |wizard| %>
  <tr>
    <td><%= wizard.name %></td>
    <td><%= link_to 'Show', admin_wizard_path(wizard) %></td>
    <td><%= link_to 'Edit', edit_admin_wizard_path(wizard) %></td>
    <td><%= link_to 'Destroy', admin_wizard_path(wizard), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

