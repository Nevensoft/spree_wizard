<script type="text/javascript">
	$(document).ready(function(){
		
    // initialize model with id
		var wizard = new SpreeWizard.Models.Wizard({id: <%= @wizard.id %>});
    
    // pull down nested data structure from controller
    wizard.fetch({
      success: function(model, response, options){
        new SpreeWizard.Views.Wizards.ShowView({model: model});
        // view's iniatialize function calls "render()"
      }
    });
	});
</script>

<div id="wizard"></div>

